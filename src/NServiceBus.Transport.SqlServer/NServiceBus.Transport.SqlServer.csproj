<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net461;netstandard2.0</TargetFrameworks>
    <AssemblyName>NServiceBus.Transport.SqlServer</AssemblyName>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\NServiceBus.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NServiceBus.Transport.SqlServer</PackageId>
    <Description>SQL transport support for NServiceBus</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Fody" Version="2.1.2" PrivateAssets="All" />
    <PackageReference Include="Janitor.Fody" Version="1.5.1" PrivateAssets="All" />
    <PackageReference Include="Obsolete.Fody" Version="4.2.4" PrivateAssets="All" />
    <PackageReference Include="Particular.CodeRules" Version="0.2.0" PrivateAssets="All" />
    <PackageReference Include="Particular.Packaging" Version="0.5.0" PrivateAssets="All" />
    <PackageReference Include="NServiceBus" Version="[7.2.0, 8.0.0)" />
    <PackageReference Include="Microsoft.Data.SqlClient" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\NServiceBus.SqlServer\**\*.cs" Exclude="**\obj\**;..\NServiceBus.SqlServer\**\*GitVersionInformation*.g.cs;..\NServiceBus.SqlServer\**\AssemblyInfo_NServiceBus.SqlServer*.g.cs;..\NServiceBus.SqlServer\**\NServiceBus.SqlServer.AssemblyInfo.cs;..\NServiceBus.SqlServer\**\InternalsVisibleTo.cs;" />
  </ItemGroup>

</Project>